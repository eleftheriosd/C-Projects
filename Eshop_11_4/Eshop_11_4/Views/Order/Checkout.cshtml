@model Order

@{
    ViewData["Title"] = "Checkout";
}

<h2>Check out now</h2>
<p>Παρακαλώ συμπληρώστε τα παρακάτω πεδία, και θα σας αποστείλουμε την παραγγελία σας αμέσως!</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <h3>Ship to</h3>
    <div class="form-group">
        <label>Όνομα:</label><input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Επίθετο:</label><input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Τηλέφωνο:</label><input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label>Διεύθυνση:</label><input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Πόλη:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Τ.Κ.:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Χώρα:</label><input asp-for="Country" class="form-control" />
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>
