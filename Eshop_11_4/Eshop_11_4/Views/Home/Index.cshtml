            {
                if (item.Show == true)
                {
                    
                    <a type="button" class="list-group-item list-group-item-action" class="dropdown-item" asp-area="" asp-controller="Products" asp-action="ViewProductsCustomer" asp-route-category="ProductType" asp-route-id="@item.ProductTypeId" asp-route-name="@item.Name">@item.Name</a>

                }
            }
        </div>

    </div>
