@model Cart

<style>

    .grid-container {
        display: grid;
        grid-template-columns: auto auto;
        grid-template-rows: 20px 20px;
        
    }

        .grid-container > div:nth-child(2){
            grid-area: 1/1/2/2;
        }

        .grid-container > div:nth-child(3) {
            grid-area: 2/1/3/2;
        }

        .grid-container > div:nth-child(1){
            grid-area: 1/3/2/3;
            margin-left: 15px;
            position: relative;
            top: 50%;
        }
</style>











<div class="grid-container">

    <div>
        <a class="btn btn-sm btn-secondary navbar-btn" asp-controller="Cart" asp-action="Index"
           asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">

            <i class="fas fa-shopping-basket"></i>

        </a>
    </div>

    @if (Model.Lines.Count() > 0)
    {
        <div>
            <small class="navbar-text text-light">


                @if (Model.Lines.Sum(x => x.Quantity) == 1)
                {
                    <span>  @Model.Lines.Sum(x => x.Quantity) προϊόν</span> }
                else
                { <span> @Model.Lines.Sum(x => x.Quantity)   προϊόντα</span>}
            </small>
        </div>

        <div>
            <small class="navbar-text text-light">
                @Model.ComputeTotalValue().ToString("0.00\u20AC")
            </small>
        </div>
    }

</div>


